<!-- views/hunting/create.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Create Hunting Entry</title>
</head>
<body>
  <h1>Create a New Hunting Entry</h1>
  <form action="/api/hunting" method="POST" enctype="multipart/form-data">
    <label for="locationName">Location Name:</label>
    <input type="text" id="locationName" name="locationName" required>
    <br>
    <label for="loadOut">Load Out:</label>
    <input type="text" id="loadOut" name="loadOut" required>
    <br>
    <label for="date">Date:</label>
    <input type="date" id="date" name="date" required>
    <br>
    <label for="latitude">Latitude:</label>
    <input type="number" id="latitude" name="latitude" step="0.000001">
    <br>
    <label for="longitude">Longitude:</label>
    <input type="number" id="longitude" name="longitude" step="0.000001">
    <br>
    <label for="photos">Photos:</label>
    <input type="file" id="photos" name="photos" multiple>
    <br>
    <button type="submit">Create Entry</button>
  </form>
</body>
</html>
